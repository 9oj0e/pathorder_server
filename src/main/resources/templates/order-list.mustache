{{>layout/header}}
<style>
    .table.list {
        --bs-table-color: white;
        --bs-table-bg: transparent;
    }

    .table.list tbody tr:hover {
        background-color: #5cbfd9;
    }
</style>
<div id="layoutSidenav" style="display: flex">
    {{>layout/sidebar}}
    <main style="padding: 50px; background-color: rgb(5, 5, 43); width: 100%; min-height: 1000px;">
        <form action="/stores/{{storeId}}/orders/history/date">
            <div class="container-fluid">
                <!-- 상단 부분: 버튼들과 캘린더 -->
                <div class="search-orders" id="searchOrdersForm">
                    <div class="top-container" style="color: white;">
                        <div>
                            <button class="twoDaysAgo">그제</button>
                            <button class="yesterday">어제</button>
                            <button class="today">오늘</button>
                        </div>
                        <div>
                            <input type="date" id="startDate" name="startDate">
                            <input type="date" id="endDate" name="endDate">
                            <button type="submit" id="searchOrders" data-store-id="{{storeId}}">조회</button>
                            <!--                        TODO: 날짜별로 조회-->
                        </div>
                    </div>
                    <!-- 현재 날짜 표시 -->
                    <div class="top-description d-flex" style="color: white; font-size: 20px;">
                        <div class="dateRangeStart">
                            <span class="year" id="startYear">year</span>
                            <span class="month" id="startMonth">month</span>
                            <span class="day" id="startDay">day</span>
                        </div>
                        <div>&nbsp;~&nbsp;</div>
                        <div class="dateRangeEnd">
                            <span class="year" id="endYear">year</span>
                            <span class="month" id="endMonth">month</span>
                            <span class="day" id="endDay">day</span>
                        </div>
                        <div>&nbsp;주문내역</div>
                    </div>
                </div>

                <table class="table list">
                    <thead>
                    <tr>
                        <th>주문번호</th>
                        <th>주문상태</th>
                        <th>주문시간</th>
                        <th>결제금액</th>
                        <th>닉네임</th>
                        <th>주문내역</th>
                    </tr>
                    </thead>
                    <tbody id="orderHistories">

                    </tbody>
                </table>
            </div>
        </form>
    </main>
</div>

<!-- 모달 시작 -->
<div class="modal fade" tabindex="-1" id="orderDetailModal" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" style="overflow-y: auto; height: 100%;">
            <div class="modal-body" style="border-radius: 8px; background-color: #fff; padding: 0;">

            </div>
        </div>
    </div>
</div>
<script>
    const storeId = {{storeId}};
</script>
<script src="/js/orderList.js"></script>
<script src="/js/orders.js"></script>
{{>layout/footer}}
