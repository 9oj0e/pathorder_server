<style>
    .table {
        --bs-table-bg: transparent;
    }

    .table.option th {
        align-content: center;
        width: 80%;
    }

    .table.option td {
        align-content: center;
        text-align: end;
    }

    .table.menu-info td {
        width: 185px;
    }

    .hidden {
        display: none;
    }

    input {
        border: 1px solid #e6e6e6;
        border-radius: 5px;
    }

</style>
<div class="modal fade" id="menuModal" role="dialog" tabindex="-1" aria-labelledby="menuModalLabel"
     data-bs-backdrop="static" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="min-height: 600px">

            <div class="modal-header" style="background-color: navy; padding: 10px;">
                <h5 class="modal-title" style="color: white; font-size: 15px;">메뉴 상세보기</h5>
                <button type="button"
                        style="border: 1px solid #65c6d3; border-radius:50%; background-color: #65c6d3; margin-right: 3px; width: 10px;height: 10px;"
                        class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/stores/{{storeId}}/menus/{{id}}" method="post" id="menuEditForm" data-menu-id="{{id}}"
                  data-store-id="{{storeId}}">
                <div style="height: 40px; display: flex; justify-content: flex-end; gap: 5px">
                    <button type="button" class="btn btn-outline-dark" id="editBtn">수정</button>
                    <button type="button" class="btn btn-outline-danger" id="deleteBtn">삭제</button>
                    <button type="submit" class="btn btn-outline-dark" id="saveBtn" style="display: none;">저장</button>
                    <button type="button" class="btn btn-outline-danger" id="cancelBtn" style="display: none;">취소</button>
                </div>

                <input type="hidden" value="{{id}}">
                <div style="display: grid; grid-template-columns: 1fr 2fr; grid-column-gap: 5%; padding: 30px">
                    <div>
                        <div class="card" style="width:300px">

                            <div class="card-body" style="height: 200px;">
                                <img class="card-img" src="https://www.mysavings.com/img/link/large/113816.jpg"
                                     style="height: 100%; width: 100%;">
                            </div>
                            <div id="menu" class="card-footer menu-info">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>분류</th>
                                        <td>{{category}}</td>
                                    </tr>
                                    <tr>
                                        <th>이름</th>
                                        <td>{{name}}</td>
                                    </tr>
                                    <tr>
                                        <th>가격</th>
                                        <td>{{price}}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div>
                        <table class="table option">
                            <thead>
                            <tr>
                                <th>
                                    <h4>필수 옵션</h4>
                                </th>
                            </tr>
                            </thead>
                            <tbody id="required-menu-option">
                            {{#menuOptionList}}
                                <tr>
                                    <th>{{menuOptionList.name}}</th>
                                    <td>{{menuOptionList.price}}</td>
                                </tr>
                            {{/menuOptionList}}
                            </tbody>
                        </table>
                        <table class="table option mb-5">
                            <thead>
                            <tr>
                                <th>
                                    <h4>선택 옵션</h4>
                                </th>
                            </tr>
                            </thead>
                            <tbody id="optional-menu-option">
                            {{#menuOptionList}}
                                {{^isRequired}}
                                    <tr>
                                        <th>{{name}}</th>
                                        <td>{{price}}</td>
                                    </tr>
                                {{/isRequired}}
                            {{/menuOptionList}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    // 버튼들을 변수로 선언
    const editBtn = document.getElementById('editBtn');
    const deleteBtn = document.getElementById('deleteBtn');
    const saveBtn = document.getElementById('saveBtn');
    const cancelBtn = document.getElementById('cancelBtn');

    // 수정 버튼 이벤트 리스너
    editBtn.addEventListener('click', function() {
        editBtn.style.display = 'none'; // 수정 버튼 숨기기
        deleteBtn.style.display = 'none'; // 삭제 버튼 숨기기
        saveBtn.style.display = 'inline-block'; // 저장 버튼 보이기
        cancelBtn.style.display = 'inline-block'; // 취소 버튼 보이기
    });

    // 저장 버튼 이벤트 리스너
    saveBtn.addEventListener('click', function() {
        saveBtn.style.display = 'none'; // 저장 버튼 숨기기
        cancelBtn.style.display = 'none'; // 취소 버튼 숨기기
        editBtn.style.display = 'inline-block'; // 수정 버튼 보이기
        deleteBtn.style.display = 'inline-block'; // 삭제 버튼 보이기
    });

    // 취소 버튼 이벤트 리스너
    cancelBtn.addEventListener('click', function() {
        saveBtn.style.display = 'none'; // 저장 버튼 숨기기
        cancelBtn.style.display = 'none'; // 취소 버튼 숨기기
        editBtn.style.display = 'inline-block'; // 수정 버튼 보이기
        deleteBtn.style.display = 'inline-block'; // 삭제 버튼 보이기
    });
</script>