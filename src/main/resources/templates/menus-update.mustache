<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<style>
    .table {
        --bs-table-bg: transparent;
        align-items: center;
    }

    .table th {
        align-content: center;
    }

    .table td {
        align-content: center;
    }

    .main-size {
        width: 1000px;
        margin: 0px auto;
    }

    .div-body {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

    .div-layout {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
    }

    .div-information {
        display: grid;
        grid-template-columns: 1fr 2fr;
        grid-column-gap: 5%;
    }
</style>

<body>

<!-- 바디 start -->
<main class="main-size">
    <div class="div-body">
        <div class="div-layout" style="min-height: 600px">
            <div class="d-flex justify-content-end">
            </div>
            <form action="#" method="post">
                <div class="div-information">
                    <div class="div-information-grid">
                        <div class="card mt-5" style="width:300px">
                            <!-- 평점 항목
                                <table class="table borderless">
                                    <tr>
                                        <td style="text-align: end; padding-bottom: 0; padding-top: 0">평점 ⭐</td>
                                        <td style="text-align: start; padding-bottom: 0; padding-top: 0">4.0</td>
                                    </tr>
                                </table>
                            -->
                            <div class="card-header" style="display:flex; justify-content: space-between;">
                                <button class="btn btn-outline-dark">
                                    확인
                                </button>
                                <button class="btn btn-outline-danger">
                                    메뉴 삭제
                                </button>
                            </div>
                            <div class="card-body" style="height: 200px;">
                                <img class="card-img" src="https://www.mysavings.com/img/link/large/113816.jpg"
                                     style="height: 100%; width: 100%;">
                            </div>
                            <div class="card-footer">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>분류</th>
                                        <td>
                                            <input type="text" class="form-control" value="커피" name="category"
                                                   id="category">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>이름</th>
                                        <td>
                                            <input type="text" class="form-control" value="카페라떼" name="name" id="name">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>가격</th>
                                        <td>
                                            <input type="text" class="form-control" value="3500" name="price"
                                                   id="price">
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>
                                    <h4>필수 옵션</h4>
                                </th>
                                <td>
                                    <i class="fa-regular fa-square-plus" style="font-size: x-large;"></i>
                                </td>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="옵션 1" name="optionName"
                                           id="optionName">
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="500" name="optionPrice"
                                           id="optionPrice">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="옵션 2" name="optionName"
                                           id="optionName">
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="500" name="optionPrice"
                                           id="optionPrice">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="옵션 3" name="optionName"
                                           id="optionName">
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="0" name="optionPrice"
                                           id="optionPrice">
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <table class="table mb-5">
                            <thead>
                            <tr>
                                <th>
                                    <h4>선택 옵션</h4>
                                </th>
                                <td>
                                    <i class="fa-regular fa-square-plus" style="font-size: x-large;"></i>
                                </td>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="옵션 4" name="optionName"
                                           id="optionName">
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="500" name="optionPrice"
                                           id="optionPrice">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="옵션 5" name="optionName"
                                           id="optionName">
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="500" name="optionPrice"
                                           id="optionPrice">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" class="form-control" value="옵션 6" name="optionName"
                                           id="optionName">
                                </td>
                                <td>
                                    <input type="text" class="form-control" value="500" name="optionPrice"
                                           id="optionPrice">
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="form-control">
                            <div class="mb-3">
                                <b>설명</b>
                            </div>
                            <div>
                                <input type="text" class="form-control" value="맛도 좋네" name="description"
                                       id="description">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
<!-- 바디 end -->
</body>

</html>